<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="@drawable/cont1"
    android:layout_height="match_parent"
    tools:context=".User_home">

    <!-- Main content layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#EDBFBF"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Add your main activity content here -->



        <!-- Add this inside the ConstraintLayout with id="main", after the Toolbar -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0.9">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <!-- Card 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="286dp"
                        android:layout_height="match_parent"
                        android:background="#EDBFBF"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="What is Heart Disease?\n"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart disease refers to a range of conditions affecting the heart. These include coronary artery disease, heart rhythm problems (arrhythmias), and congenital heart defects, among others. Itâ€™s one of the leading causes of health issues globally, but many forms of heart disease can be prevented or managed with a healthy lifestyle and proper medical care."
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!-- Add more content for card 1 -->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#EDBFBF">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Types of Heart Disease\n"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coronary Artery Disease (CAD): Blocked arteries limit blood flow to the heart.
\nArrhythmias: Irregular heartbeats reduce efficiency.
\nHeart Valve Disease: Heart valve malfunction.
\nHeart Failure: Ineffective blood pumping.
\nCongenital Heart Defects: Heart structure issues from birth.
\nCardiomyopathy: Weak heart muscle hampers pumping."
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <!-- Add more content for card 2 -->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#EDBFBF">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Risk Factors\n"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Certain lifestyle choices and health conditions can increase the risk of heart disease, \nsuch as:
                            \nSmoking
\nPoor diet (high in salt, sugar, and unhealthy fats)
\nPhysical inactivity
\nExcessive alcohol consumption
\nObesity and being overweight
\nHigh blood pressure, high cholesterol, and diabetes"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <!-- Add more content for card 3 -->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#EDBFBF">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Symptoms of Heart Disease\n"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Symptoms can vary widely depending on the type of heart disease. Some general symptoms include:
\nChest pain or discomfort (angina)
\nShortness of breath
\nFatigue, especially with exertion
\nIrregular heartbeat (palpitations)
\nSwelling in the legs, ankles, or feet (common in heart failure)"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <!-- Add more content for card 4 -->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Card 5 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#EDBFBF">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prevention Tips\n"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healthy Eating: Focus on fruits, vegetables, whole grains, and lean proteins. Limit processed foods, salt, and added sugars.
\nRegular Exercise: Aim for at least 150 minutes of moderate aerobic activity each week, such as brisk walking or cycling.
\nAvoid Smoking and Limit Alcohol: Both can contribute significantly to heart disease.
\nRegular Health Screenings: Monitor blood pressure, cholesterol, and blood sugar levels to manage risk factors early."
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <!-- Add more content for card 4 -->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>