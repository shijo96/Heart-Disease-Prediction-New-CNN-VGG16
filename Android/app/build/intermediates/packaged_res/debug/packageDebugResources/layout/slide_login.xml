<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/lgp"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="270dp"
        android:textSize="28dp"/>

    <!-- Username Input -->

    <!-- Password Input -->
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginTop="176dp"
        android:paddingLeft="7dp"
        android:hint="Username"
        android:textColor="#fff"
        android:textColorHint="#716E6E"
        android:background="@drawable/received"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColor="#fff"
        android:textColorHint="#716E6E"
        android:paddingLeft="7dp"
        android:background="@drawable/received"
        android:inputType="textPassword"
        android:layout_margin="16dp"/>

    <!-- Login Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_margin="16dp"
        android:textColor="#fff"
        android:background="@drawable/register_bt"
        android:layout_marginTop="24dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:text="Don't have an account? \nSign up. \nSwipe right to access the registration form."/>
</LinearLayout>
